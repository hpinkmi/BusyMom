@{ 
    string error = "No Error Available";
    HandleErrorInfo hi = Model as HandleErrorInfo;
    if (hi != null) { error = hi.Exception.ToString(); }
    else
    {
        Exception except = Model as Exception;
        if (except != null) { error = except.ToString(); }
        else
        {
            except  = ViewBag.Exception;
            if (except != null) { error = except.ToString(); }
        }
    }
    
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
</head>
<body>
    <hgroup>
        <h1>Error.</h1>
        <h2>An error occurred while processing your request.</h2>
        The Details are:
        <p>
            @error
        </p>
    </hgroup>
</body>
</html>
